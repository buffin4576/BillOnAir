<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#22ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/AggSETitolo"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importo"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/AggSETitolo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtImporto"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerConti"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignRight="@+id/txtImporto"
        android:layout_alignEnd="@+id/txtImporto"
        android:layout_alignLeft="@+id/txtImporto"
        android:layout_alignStart="@+id/txtImporto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conto"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:layout_below="@+id/txtImporto"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:layout_below="@+id/SpinnerConti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDettagli"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annula"
        android:id="@+id/BTSEAnulla"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/textView8" />
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conferma"
        android:id="@+id/BTSEConferma"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtImporto"
        android:layout_alignEnd="@+id/txtImporto"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8" />
        android:layout_alignEnd="@+id/txtImporto" />

</RelativeLayout>