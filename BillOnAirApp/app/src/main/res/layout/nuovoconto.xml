<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/TxtNomeNuovoConto"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo:"
            android:id="@+id/textView4"
            android:textSize="30dp"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/TxtSaldoNuovoConto"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colore:"
            android:id="@+id/textView5"
            android:textSize="30dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore3"
            android:src="#ff0000"
            android:state_selected="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore2"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore3"
            android:layout_toLeftOf="@+id/colore3"
            android:layout_marginRight="20dp"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore1"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore2"
            android:layout_toLeftOf="@+id/colore2"
            android:layout_marginRight="20dp"
            android:background="#ff0000" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore4"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore3"
            android:layout_toRightOf="@+id/colore3"
            android:layout_marginLeft="20dp"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore5"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore3"
            android:layout_toRightOf="@+id/colore4"
            android:layout_marginLeft="20dp"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore8"
            android:src="#ff0000"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/colore3"
            android:layout_toRightOf="@+id/colore2"
            android:layout_toEndOf="@+id/colore2"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore7"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore8"
            android:layout_toLeftOf="@+id/colore8"
            android:layout_marginRight="20dp"
            android:background="#ff0000"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore6"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore8"
            android:layout_toLeftOf="@+id/colore7"
            android:layout_marginRight="20dp"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore9"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore8"
            android:layout_toRightOf="@+id/colore8"
            android:layout_marginLeft="20dp"
            android:background="#ff0000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/colore10"
            android:src="#ff0000"
            android:layout_alignTop="@+id/colore8"
            android:layout_toRightOf="@+id/colore9"
            android:layout_marginLeft="20dp"
            android:background="#ff0000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi"
            android:id="@+id/ButtonAggiungi"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/colore7"
            android:layout_alignLeft="@+id/colore6"
            android:layout_alignStart="@+id/colore6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annula"
            android:id="@+id/ButtonClose"
            android:layout_alignTop="@+id/ButtonAggiungi"
            android:layout_alignRight="@+id/colore10"
            android:layout_alignEnd="@+id/colore10" />

    </RelativeLayout>
</LinearLayout>