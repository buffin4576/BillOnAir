<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:id="@+id/textView3"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/TxtNomeNuovoConto"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_alignTop="@+id/textView3"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo:"
            android:id="@+id/textView4"
            android:textSize="22dp"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/TxtSaldoNuovoConto"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignTop="@+id/textView4"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colore:"
            android:id="@+id/textView5"
            android:textSize="24dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:measureWithLargestChild="false">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:layout_marginTop="10dp"
                android:measureWithLargestChild="false"
                android:textAlignment="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore3"
                    android:state_selected="true"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:background="#0000ff"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore2"
                    android:layout_alignTop="@+id/colore3"
                    android:layout_toLeftOf="@+id/colore3"
                    android:layout_marginRight="20dp"
                    android:background="#ff00ff"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore1"
                    android:layout_alignTop="@+id/colore2"
                    android:layout_toLeftOf="@+id/colore2"
                    android:layout_marginRight="20dp"
                    android:background="#ff0000" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore4"
                    android:layout_alignTop="@+id/colore3"
                    android:layout_toRightOf="@+id/colore3"
                    android:layout_marginLeft="20dp"
                    android:background="#00ffff"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore5"
                    android:layout_alignTop="@+id/colore3"
                    android:layout_toRightOf="@+id/colore4"
                    android:layout_marginLeft="20dp"
                    android:background="#00ff00"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore8"
                    android:layout_below="@+id/colore3"
                    android:layout_toRightOf="@+id/colore2"
                    android:layout_toEndOf="@+id/colore2"
                    android:background="#7f007f"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore7"
                    android:layout_alignTop="@+id/colore8"
                    android:layout_toLeftOf="@+id/colore8"
                    android:layout_marginRight="20dp"
                    android:background="#7f0000"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore6"
                    android:layout_alignTop="@+id/colore8"
                    android:layout_toLeftOf="@+id/colore7"
                    android:layout_marginRight="20dp"
                    android:background="#ffff00"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore9"
                    android:layout_alignTop="@+id/colore8"
                    android:layout_toRightOf="@+id/colore8"
                    android:layout_marginLeft="20dp"
                    android:background="#ffffff"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/colore10"
                    android:layout_alignTop="@+id/colore8"
                    android:layout_toRightOf="@+id/colore9"
                    android:layout_marginLeft="20dp"
                    android:background="#000000"/>
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aggiungi"
                android:id="@+id/ButtonAggiungi"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/colore7"
                android:layout_alignLeft="@+id/colore6"
                android:layout_alignStart="@+id/colore6"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annula"
                android:id="@+id/ButtonClose"
                android:layout_alignTop="@+id/ButtonAggiungi"
                android:layout_alignRight="@+id/colore10"
                android:layout_alignEnd="@+id/colore10"
                android:layout_weight="0.5"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
</ScrollView>