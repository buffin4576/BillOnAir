<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debitore"
        android:id="@+id/txtdebitore"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtdataspesa"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" deve "
        android:id="@+id/textView12"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtdataspesa"
        android:layout_toEndOf="@+id/txtdebitore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/txtdebito"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" a "
        android:id="@+id/textView13"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/txtcreditore"
        android:layout_toEndOf="@+id/txtdebito" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creditore "
        android:id="@+id/txtcreditore"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/txtdebito"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="per preservativi usati al gusto cannella"
        android:id="@+id/txtcausale"
        android:textSize="20dp"
        android:layout_below="@+id/txtdebitore"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/09/2016"
        android:id="@+id/txtdataspesa"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>