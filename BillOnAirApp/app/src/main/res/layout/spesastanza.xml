<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtcausale"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:text="causale"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debitore"
        android:id="@+id/txtdebitore"
        android:textSize="25dp"
        android:layout_below="@+id/txtdataspesa"
        android:layout_alignParentStart="true"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" deve "
        android:id="@+id/textView12"
        android:textSize="25dp"
        android:layout_below="@+id/txtdataspesa"
        android:layout_toEndOf="@+id/txtdebitore"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/txtdebito"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" a "
        android:id="@+id/textView13"
        android:textSize="25dp"
        android:layout_alignTop="@+id/txtcreditore"
        android:layout_toEndOf="@+id/txtdebito"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creditore "
        android:id="@+id/txtcreditore"
        android:textSize="25dp"
        android:layout_alignTop="@+id/txtdebito"
        android:layout_toEndOf="@+id/textView13"
        android:textColor="@color/caldroid_555" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/09/2016"
        android:id="@+id/txtdataspesa"
        android:textSize="20dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtcausale"
        android:textColor="@color/caldroid_555" />
</RelativeLayout>